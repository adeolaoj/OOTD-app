<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outfitCard"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0.5dp"
        app:cardCornerRadius="1dp">



            <GridLayout
                android:id="@+id/garmentGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="8dp">


                <ImageButton
                    android:id="@+id/favoritesOutfit"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@null"
                    android:contentDescription="Favorite"
                    android:scaleType="centerInside"
                    android:src="@drawable/favorites_unfilled"
                    app:layout_constraintBottom_toBottomOf="@id/garmentGrid"
                    app:layout_constraintEnd_toEndOf="@id/garmentGrid">


                </ImageButton>



            </GridLayout>



<!--            <HorizontalScrollView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:layout_constraintTop_toBottomOf="@id/outfitImageView"-->
<!--                android:scrollbars="none">-->

<!--            </HorizontalScrollView>-->


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>