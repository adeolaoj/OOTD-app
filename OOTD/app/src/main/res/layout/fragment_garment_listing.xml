<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="147dp">


        <ImageView
            android:id="@+id/Listing_Image"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/yet_another_round_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.025" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Category_Input"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Listing_Image"
            app:layout_constraintVertical_bias="0.03">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/Tops"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="@string/category"
                android:inputType="none"

                android:textColorHint="@color/regular_grey"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintWidth_percent="0.2" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/SubcategoryInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Listing_Image"
            app:layout_constraintVertical_bias="0.22">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/Blouse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="@string/sub_category"
                android:inputType="none"

                android:textColorHint="@color/regular_grey"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintWidth_percent="0.2" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/colorGroup"
            android:layout_width="368dp"
            android:layout_height="228dp"
            app:chipSpacing="4dp"
            app:chipSpacingVertical="2dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.72"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Listing_Image"
            app:layout_constraintVertical_bias="0.609"
            app:singleLine="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/redChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/red"
                app:checkedIcon="@color/red"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/orangeChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/orange"
                app:checkedIcon="@color/orange"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/yellowChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/yellow"
                app:checkedIcon="@color/yellow"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/greenChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/green"
                app:checkedIcon="@color/green"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/blueChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/blue"
                app:checkedIcon="@color/blue"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/purpleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/purple"
                app:checkedIcon="@color/purple"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/greyChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/grey"
                app:checkedIcon="@color/grey"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/magentaChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/magenta"
                app:checkedIcon="@color/magenta"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/pinkChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/pink"
                app:checkedIcon="@color/chip_pink"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/beigeChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/beige"
                app:checkedIcon="@color/chip_beige"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/brownChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/brown"
                app:checkedIcon="@color/brown"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/blackChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/black"
                app:checkedIcon="@color/black"
                app:chipBackgroundColor="@color/regular_grey" />

            <com.google.android.material.chip.Chip
                android:id="@+id/whiteChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/white"
                app:checkedIcon="@color/white"
                app:chipBackgroundColor="@color/regular_grey" />

        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/SaveListing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="215dp"
            android:text="@string/save_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SubcategoryInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</android.widget.ScrollView>